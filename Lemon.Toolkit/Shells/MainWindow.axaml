<Window
    x:Class="Lemon.Toolkit.Shells.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Lemon.Toolkit.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lemon.Toolkit.Shells"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:Lemon.Toolkit.Views"
    xmlns:vm="using:Lemon.Toolkit.ViewModels"
    Name="shell"
    Title="Lemon.Toolkit"
    MinWidth="900"
    MinHeight="600"
    d:DesignHeight="800"
    d:DesignWidth="1000"
    x:DataType="local:MainWindowViewModel"
    ExtendClientAreaTitleBarHeightHint="40"
    ExtendClientAreaToDecorationsHint="True"
    Icon="avares://Lemon.Toolkit/Assets/lemon.png"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <Window.Styles>
        <Style Selector="Image#WindowIcon">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
        </Style>
        <Style Selector="Image#WindowIcon:pointerover">
            <Style.Animations>
                <Animation IterationCount="INFINITE" Duration="0:0:0.5">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="1" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid
        Margin="4,4,4,4"
        RowDefinitions="40,*,280"
        ShowGridLines="False">

        <StackPanel
            Grid.Row="0"
            Margin="2,2,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Image
                Name="WindowIcon"
                Source="avares://Lemon.Toolkit/Assets/lemon.png"
                Stretch="UniformToFill" />
            <TextBlock
                Margin="2,5,0,0"
                FontWeight="SemiBold"
                Foreground="Gray"
                Text="Lemon.Toolkit" />
        </StackPanel>

        <TabControl
            Name="tab"
            Grid.Row="1"
            Margin="8"
            Padding="20,0,0,0"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Modules}"
            SelectedItem="{Binding CurrentTab}"
            TabStripPlacement="Left"
            Theme="{DynamicResource NavigationTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding View}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <Expander
            Grid.Row="2"
            Margin="0,0,0,10"
            VerticalAlignment="Bottom"
            ExpandDirection="Up"
            IsExpanded="{Binding ConsoleIsExpanded}">
            <Expander.Header>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Viewbox
                        Width="30"
                        Height="30"
                        Stretch="Uniform">
                        <Canvas
