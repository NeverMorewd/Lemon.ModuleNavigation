                                <Path.Data>
                                    <PathGeometry Figures="M 41 11 v 25 H 7 V 11 H 41 M 42 10 H 6 v 27 h 36 V 10 L 42 10 z" FillRule="NonZero" />
                                </Path.Data>
                            </Path>
