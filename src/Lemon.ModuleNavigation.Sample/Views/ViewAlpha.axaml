<UserControl
    x:Class="Lemon.ModuleNavigation.Sample.Views.ViewAlpha"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:lm="https://github.com/NeverMorewd/Lemon.ModuleNavigation"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border BorderBrush="LemonChiffon" BorderThickness="2">
        <StackPanel>
            <TextBlock Text="{Binding Greeting}" />
            <Button
                Width="200"
                Height="50"
                Command="{Binding CloseCommand}"
                Content="CloseDialog"
                IsVisible="{Binding IsDialog}" />
			<Button
			   Width="200"
			   Height="50"
			   lm:NavigationExtension.CanUnload="True"
			   Content="UnloadView"
			   IsVisible="{Binding !IsDialog}" />
        </StackPanel>
    </Border>
</UserControl>
